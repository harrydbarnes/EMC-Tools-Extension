{
  "manifest_version": 3,
  "name": "Prisma Tools",
  "version": "1.0",
  "description": "Enhances Prisma functionality and provides quick access to various tools. Built by Harry Barnes.",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "offscreen" // Add the offscreen permission here
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://groupmuk-prisma.mediaocean.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icon.png"], // Only icon.png seems necessary for content script logo replacement
    "matches": ["https://groupmuk-prisma.mediaocean.com/*"]
  }]
}
